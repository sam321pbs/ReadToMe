<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bookshelf_empty"
                tools:context=".MainActivity">

    <TableRow
            android:id="@+id/table_row1_book_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp">

        <ImageView
                android:id="@+id/book_cover_page_1"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_2"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_3"
                style="@style/BookCoverImageLayout"
                />


    </TableRow>

    <TableRow
            android:id="@+id/table_row1_book_textViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp">

        <TextView
                android:id="@+id/book_cover_page_1_textview"
                style="@style/BookCoverTextLayout"/>

        <TextView
                android:id="@+id/book_cover_page_2_textview"
                style="@style/BookCoverTextLayout"/>

        <TextView
                android:id="@+id/book_cover_page_3_textview"
                style="@style/BookCoverTextLayout"/>

    </TableRow>

    <TableRow
            android:id="@+id/table_row2_book_images"
            android:layout_below="@+id/table_row1_book_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp">

        <ImageView
                android:id="@+id/book_cover_page_4"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_5"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_6"
                style="@style/BookCoverImageLayout"
                />


    </TableRow>

    <TableRow
            android:id="@+id/table_row2_book_textviews"
            android:layout_below="@+id/table_row1_book_textViews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp">


        <TextView
                android:id="@+id/book_cover_page_4_textview"
                style="@style/BookCoverTextLayout"/>


        <TextView
                android:id="@+id/book_cover_page_5_textview"
                style="@style/BookCoverTextLayout"/>


        <TextView
                android:id="@+id/book_cover_page_6_textview"
                style="@style/BookCoverTextLayout"/>

    </TableRow>

    <TableRow
            android:id="@+id/table_row3_book_images"
            android:layout_below="@+id/table_row2_book_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp">

        <ImageView
                android:id="@+id/book_cover_page_7"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_8"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_9"
                style="@style/BookCoverImageLayout"
                />

    </TableRow>

    <TableRow
            android:id="@+id/table_row3_book_textviews"
            android:layout_below="@+id/table_row2_book_textviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp">


        <TextView
                android:id="@+id/book_cover_page_7_textview"
                style="@style/BookCoverTextLayout"/>


        <TextView
                android:id="@+id/book_cover_page_8_textview"
                style="@style/BookCoverTextLayout"/>


        <TextView
                android:id="@+id/book_cover_page_9_textview"
                style="@style/BookCoverTextLayout"/>


    </TableRow>

    <TableRow
            android:layout_below="@+id/table_row3_book_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp">

        <ImageView
                android:id="@+id/book_cover_page_10"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_11"
                style="@style/BookCoverImageLayout"
                />


        <ImageView
                android:id="@+id/book_cover_page_12"
                style="@style/BookCoverImageLayout"
                />


    </TableRow>

    <TableRow
            android:layout_below="@+id/table_row3_book_textviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp">

        <TextView
                android:id="@+id/book_cover_page_10_textview"
                style="@style/BookCoverTextLayout"/>


        <TextView
                android:id="@+id/book_cover_page_11_textview"
                style="@style/BookCoverTextLayout"/>


        <TextView
                android:id="@+id/book_cover_page_12_textview"
                style="@style/BookCoverTextLayout"/>


    </TableRow>

    <Button
            android:id="@+id/my_library_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" android:background="#ffffff"/>

    <Button
            android:id="@+id/my_library_prev_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prev."
            android:layout_alignParentBottom="true"
            android:background="#ffffff"/>

</RelativeLayout>
