<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blank_page"
    tools:context="com.example.sammengistu.readtome.activities.PagesActivity">

    <ImageView
        android:id="@+id/page_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/curious_geroge_page_1"/>


    <TableLayout
        android:id="@+id/fragment_page_tableLayout1"
        style="@style/TableLayoutView"
        android:layout_below="@+id/page_picture"
        android:layout_marginTop="20dp">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableLayout
        android:id="@+id/fragment_page_tableLayout2"
        style="@style/TableLayoutView"
        android:layout_below="@+id/fragment_page_tableLayout1">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableLayout
        android:id="@+id/fragment_page_tableLayout3"
        style="@style/TableLayoutView"
        android:layout_below="@+id/fragment_page_tableLayout2">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableLayout
        android:id="@+id/fragment_page_tableLayout4"
        style="@style/TableLayoutView"
        android:layout_below="@+id/fragment_page_tableLayout3">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableLayout
        android:id="@+id/fragment_page_tableLayout5"
        style="@style/TableLayoutView"
        android:layout_below="@+id/fragment_page_tableLayout4">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableLayout
        android:id="@+id/fragment_page_tableLayout6"
        style="@style/TableLayoutView"
        android:layout_below="@+id/fragment_page_tableLayout5">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableLayout
        android:id="@+id/fragment_page_tableLayout7"
        style="@style/TableLayoutView"
        android:layout_below="@+id/fragment_page_tableLayout6">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableLayout
        android:id="@+id/fragment_page_tableLayout8"
        style="@style/TableLayoutView"
        android:layout_below="@+id/fragment_page_tableLayout7">

        <include
            layout="@layout/words_row"/>
    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:src="@drawable/turn_back"/>

        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:src="@drawable/blue_play_button"/>

        <Button
            android:id="@+id/clear_highlights_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:text="Clear"
            android:background="@drawable/select_word_normal_button"/>

        <ImageView
            android:id="@+id/turn_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:src="@drawable/turn_page"/>

    </TableRow>


</RelativeLayout>
