<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@drawable/blank_page">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/definition_word_box"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help_fragment_title"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:layout_marginTop="20dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/help_fragment_images"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_button_updated"
               />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sentence_button"
                android:layout_marginTop="65dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/page_button_image"
                android:layout_marginTop="32dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clear_button"
                android:layout_marginTop="22dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow_smaller"
                android:layout_marginTop="22dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_smaller"
                android:layout_marginTop="22dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookmark"
                android:layout_marginTop="32dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/help_fragment_images"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_fragment_how_to_use_play_button"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_fragment_how_to_use_sentence_button"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_fragment_how_to_use_page_button"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_fragment_how_to_use_clear_button"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="45dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_fragment_how_to_use_previous_page_button"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_fragment_how_to_use_next_page_button"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you see the bookmark than this will be the first page you see when you restart the app"
                android:textSize="20sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/help_fragment_how_to_use_dictionary"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>