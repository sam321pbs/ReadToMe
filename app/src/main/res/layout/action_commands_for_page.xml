<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_gravity="bottom"
          android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".16"
        android:src="@drawable/left_arrow_smaller"/>

    <ImageView
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".16"
        android:src="@drawable/play_button_updated"/>

    <ImageView
        android:id="@+id/sentence_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".16"
        android:src="@drawable/sentence_button"/>

    <ImageView
        android:id="@+id/page_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".16"
        android:src="@drawable/page_button_image"/>

    <ImageView
        android:id="@+id/clear_highlights_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".16"
        android:src="@drawable/clear_button"/>

    <ImageView
        android:id="@+id/turn_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight=".25"
        android:paddingTop="2dp"
        android:src="@drawable/right_arrow_smaller"/>

</TableRow>
